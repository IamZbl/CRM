<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="change.crm.mapper.UserMapper">

	<!-- 基本类型sql语句 -->
	<sql id="baseUserSql">
		select id,userName,password,trueName,email,phone,roleName
		from t_user
	</sql>

	<!-- 根据id查询 -->
	<select id="getObjectById" parameterType="int" resultType="user">
		<include refid="baseUserSql" />
		where id=#{id}
	</select>

	<!-- 查询所有信息 -->
	<select id="getObjects" parameterType="queryVo" resultType="user">
		<include refid="baseUserSql" />
		<!-- 拼接sql语句 -->
		<where>
			<!-- 拼接sql语句 -->
			<if test="entity!=null">
				<if test="entity.userName!=null">
					and userName like '%${entity.userName}%'
				</if>
				<!-- 其它条件 -->
				<if test="entity.email!=null">
					and email like '%${entity.email}%'
				</if>
				<if test="entity.phone!=null">
					and phone like '%${entity.phone}%'
				</if>
				<if test="entity.trueName!=null">
					and trueName like '%${entity.trueName}%'
				</if>
				<if test="entity.roleName!=null">
					and roleName like '%${entity.roleName}%'
				</if>
			</if>
		</where>
		<!-- 排序的操作 -->
		<if test="sort!=null and desc!=null">
			order by ${sort} ${desc}
		</if>
		<!-- 分页拼装 -->
		<if test="startSize!=null and pageSize!=null">
			limit #{startSize},#{pageSize}
		</if>
	</select>

	<!-- 获取总记录数 -->
	<select id="getObjectsSize" parameterType="queryVo" resultType="int">
		<!-- 引入指定的sql语句 -->
		select count(*) from t_user
		<where>
			<!-- 拼接sql语句 -->
			<if test="entity!=null">
				<if test="entity.userName!=null">
					and userName like '%${entity.userName}%'
				</if>
				<!-- 其它条件 -->
				<if test="entity.email!=null">
					and email like '%${entity.email}%'
				</if>
				<if test="entity.phone!=null">
					and phone like '%${entity.phone}%'
				</if>
				<if test="entity.trueName!=null">
					and trueName like '%${entity.trueName}%'
				</if>
			</if>
		</where>
	</select>


